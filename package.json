{
  "name": "joycon-ts-loader",
  "version": "1.0.2",
  "description": "A TypeScript loader for JoyCon.",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist/*",
    "build": "tsc -p .",
    "lint": "tslint -p .",
    "pretest": "npm run build",
    "test": "npm run lint && jest",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gluons/joycon-ts-loader.git"
  },
  "keywords": [
    "config",
    "ts",
    "typescript",
    "loader",
    "joycon",
    "joycon-loader"
  ],
  "author": "Saran Tanpituckpong <sarunta@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gluons/joycon-ts-loader/issues"
  },
  "homepage": "https://github.com/gluons/joycon-ts-loader",
  "peerDependencies": {
    "joycon": "^1.0.4",
    "typescript": "^2.8 || ^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "6",
    "@types/pify": "^3.0.2",
    "@types/strip-bom": "^3.0.0",
    "@types/webpack": "^4.4.9",
    "chalk": "^2.4.1",
    "jest": "^23.5.0",
    "joycon": "^1.0.4",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-gluons": "^2.0.2",
    "typescript": "^3.0.0",
    "webpack": "^4.16.5"
  },
  "dependencies": {
    "pify": "^4.0.0",
    "strip-bom": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
